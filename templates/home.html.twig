{% extends 'base.html.twig'  %}

{% block body %}
    <h2 class="mt-2">Liste des mat√©riels avec les clients </h2>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>MATERIAL NAME</th>
            <th>MATERIAL DESCRIPTION</th>
            <th>MATERIAL PRICE</th>
            <th>MATERIAL CLIENT</th>
        </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.name }}</td>
                <td>{{ material.description }}</td>
                <td>{{ material.price }}</td>
                <td>{{ material.client.firstName }} {{ material.client.lastName }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}